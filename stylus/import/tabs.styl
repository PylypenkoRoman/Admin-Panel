.tabs
    display: flex
    margin: 0
    padding: 0
    list-style: none
    .tab
        font-size: 15px
        color: $dark
        position relative
        box-sizing border-box
        padding 15px
        line-height 15px
        flex-grow: 1
        text-align center
        font-weight bold
        text-transform uppercase
        cursor pointer
        &:hover
            color: $light_red
        &.active
            color: $light_red
            &:after
              position: absolute
              content: ""
              bottom: 0
              left: 0
              right: 0
              width: 100%
              height 4px
              background: $light_red